<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="BrowserStack Cross Browser Suite" parallel="tests" thread-count="5">
  <test name="Thread1 Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.browserstack.tests.BrowserStackTechAssignment"/>
        </classes>
   </test>
   <test name="Thread 2 Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.browserstack.tests.BrowserStackTechAssignment"/>
        </classes>
    </test>
    <test name="Thread 3 Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.browserstack.tests.BrowserStackTechAssignment"/>
        </classes>
    </test>
    <test name="Thread 4 Android Mobile">
        <parameter name="browser" value="android_mobile"/>
        <classes>
            <class name="com.browserstack.tests.BrowserStackTechAssignment"/>
        </classes>
    </test>
    <test name="Thread 5 Android Tab">
        <parameter name="browser" value="android_tab"/>
        <classes>
            <class name="com.browserstack.tests.BrowserStackTechAssignment"/>
        </classes>
    </test>
</suite>